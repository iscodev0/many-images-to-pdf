---
import Button from './Button.astro';
import { Settings, RotateCcw, Trash2, Download } from 'lucide-astro';

interface Props {
  class?: string;
}

const { class: className = '', ...props } = Astro.props;
---

<!-- Botones responsive que se adaptan a diferentes tama√±os -->
<div class="flex flex-wrap gap-2 sm:gap-3 justify-center">
  <!-- Configuraci√≥n -->
  <Button id="settings-btn" variant="outline" size="lg" class="flex-1 sm:flex-none min-w-[100px] sm:min-w-[120px]">
    <Settings class="w-4 h-4 mr-1 sm:mr-2" />
    <span class="hidden xs:inline">Configurar</span>
    <span class="xs:hidden">Config</span>
  </Button>
  
  <!-- Orden reverso -->
  <Button id="reverse-order-btn" variant="outline" size="lg" class="flex-1 sm:flex-none min-w-[100px] sm:min-w-[140px]">
    <RotateCcw class="w-4 h-4 mr-1 sm:mr-2" />
    <span class="hidden sm:inline">Invertir Orden</span>
    <span class="sm:hidden">Invertir</span>
  </Button>
  
  <!-- Limpiar todo -->
  <Button id="clear-all-btn" variant="destructive" size="lg" class="flex-1 sm:flex-none min-w-[100px] sm:min-w-[120px]">
    <Trash2 class="w-4 h-4 mr-1 sm:mr-2" />
    <span class="hidden xs:inline">Limpiar</span>
    <span class="xs:hidden">üóëÔ∏è</span>
  </Button>
  
  <!-- Generar PDF - bot√≥n principal m√°s prominente -->
  <Button id="download-pdf-btn" size="lg" class="flex-1 sm:flex-none bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 min-w-[120px] sm:min-w-[160px] order-first sm:order-last">
    <Download class="w-4 h-4 mr-1 sm:mr-2" />
    <span class="hidden sm:inline">Generar PDF</span>
    <span class="sm:hidden">PDF</span>
  </Button>
</div>
