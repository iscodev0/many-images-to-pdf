---
import AppHeader from './ui/AppHeader.astro';
import TutorialSection from './ui/TutorialSection.astro';
import ImageUploadSection from './ui/ImageUploadSection.astro';
import ControlButtons from './ui/ControlButtons.astro';
import ImagePreviewTable from './ui/ImagePreviewTable.astro';
import SettingsModal from './ui/SettingsModal.astro';
import ThemeToggle from './ui/ThemeToggle.astro';
---

<!-- Contenedor principal responsive -->
<div class="min-h-screen bg-background text-foreground transition-colors duration-200">
  <!-- Toggle de tema -->
  <ThemeToggle />
  
  <!-- Contenedor con padding responsive -->
  <div class="container mx-auto px-4 py-6 space-y-6 max-w-6xl sm:px-6 lg:px-8">
    <!-- Header responsive -->
    <div class="space-y-4">
      <AppHeader />
    </div>
    
    <!-- Tutorial colapsable en móvil -->
    <div class="lg:block">
      <TutorialSection />
    </div>
    
    <!-- Sección de carga responsive -->
    <div class="space-y-4">
      <ImageUploadSection />
    </div>
    
    <!-- Controles responsive -->
    <div class="space-y-4">
      <ControlButtons />
    </div>
    
    <!-- Tabla responsive con scroll horizontal -->
    <div class="space-y-4">
      <div class="overflow-x-auto -mx-4 px-4 sm:mx-0 sm:px-0">
        <ImagePreviewTable />
      </div>
    </div>
    
    <!-- Modal de configuración -->
    <SettingsModal />
  </div>
</div>

<script>
  import { ImageManager } from '../utils/imageManager';

  // Initialize the application
  const imageManager = new ImageManager();
  
  // Make it globally accessible for HTML onclick handlers
  (window as any).imageManager = imageManager;
</script>
